<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <!--
      Indicate to other targets that .NET Analyzers are being used.
    -->
  <PropertyGroup>
    <UsingNETAnalyzers>true</UsingNETAnalyzers>
  </PropertyGroup>


  <ItemGroup Condition="'$(DisableNetAnalyzers)' != 'true' And '$(_TargetFrameworkVersionWithoutV)' >= '5.0'">
    <Analyzer
      Include="$([System.IO.Path]::GetFullPath($(MSBuildThisFileDirectory)..))\analyzers\dotnet\Microsoft.CodeAnalysis.NetAnalyzers.dll"
      Condition="'$(Language)'=='C#' OR $(Language)'=='VB'"
      IsImplicitlyDefined="true" />
    <Analyzer
      Include="$([System.IO.Path]::GetFullPath($(MSBuildThisFileDirectory)..))\analyzers\dotnet\Microsoft.CodeAnalysis.VisualBasic.NetAnalyzers.dll"
      Condition="'$(Language)'=='VB'"
      IsImplicitlyDefined="true" />
    <Analyzer
      Include="$([System.IO.Path]::GetFullPath($(MSBuildThisFileDirectory)..))\analyzers\dotnet\Microsoft.CodeAnalysis.CSharp.NetAnalyzers.dll"
      Condition="'$(Language)'=='C#'"
      IsImplicitlyDefined="true" />
  </ItemGroup>

</Project>